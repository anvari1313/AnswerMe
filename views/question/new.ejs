<script>
  var tag_container;

  function removetag(tag) {
    alert('this');
  }

  function addTag(tag) {
    $('#tag-container').append('<span class="badge badge-primary" style="margin: 0.5em" onclick="removetag('+ tag +')">'+ tag +'</span>');
  }
  $( document ).ready(function() {

    var tag_input = document.getElementById('tag-input');
      tag_input.onkeydown = function(event) {
      if (event.keyCode == 13) {
        var tag = tag_input.value;
        tag_input.value = '';
        addTag(tag);
      }
    }

    <% tags.forEach(function (tag, id) { %>
      addTag('<%- tag%>');
    <%})%>
  });
</script>
<form class="form-horizontal">
  <div class="form-group">
    <input class="form-control form-control-lg" type="text" placeholder="Title">
  </div>
  <div class="form-group form-group-sm">
    <label class="col-sm-2 control-label form-control-sm" for="formGroupInputSmall">Small label</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" id="tag-input" placeholder="Enter tag">
      <div id="tag-container">
      </div>
    </div>
  </div>
</form>
