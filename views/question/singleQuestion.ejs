        <p for="inputsm">Some comment</p>
        <p for="inputsm">Some comment</p>
        <p for="inputsm">Some comment</p>
        <input class="form-control col-sm-10 input-sm" id="inputsm" type="text">
      </div>
    </div>
  </div>


  <%question.answers.forEach(function (answer, index) {%>
